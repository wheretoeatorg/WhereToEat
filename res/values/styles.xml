<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textViewStyle">@style/Widget.TextView.Custom</item>
        <item name="android:imageButtonStyle">@style/customImageButton</item>
    </style>

    <style name="Widget.TextView.Custom" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="LargerFont">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LargerFont.white">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="LargerFont.white.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mediumBoldTextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="largeBoldTextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="customImageButton" parent="android:Widget.ImageButton">
        <item name="android:background">@null</item>
    </style>

    <style name="LargerFont.white.bold.DarkBackgrod">
        <item name="android:background">@drawable/dark_grd</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="custom_list_view" parent="@android:style/Widget.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="custom_list_view2" parent="@android:style/Widget.ListView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingLeft">20sp</item>
        <item name="android:listSelector">@drawable/category_selector_list_item</item>
    </style>

    <style name="custom_header">
        <item name="android:background">@drawable/solid_color_shape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="custom_header_linear_layout_children">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/category_selector_list_item</item>
    </style>

    <style name="custom_number_tv" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/tv_number_bg</item>
    </style>

    <style name="custom_rating_bar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_custom</item>
        <item name="android:gravity">center</item>
    </style>

</resources>